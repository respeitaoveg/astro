<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jogue com os melhores!" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={optimizedFavicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

