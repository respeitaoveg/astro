---
interface Props {
  title: string;
  description: string;
}
import { getImage } from "astro:assets";
const { title } = Astro.props;
import myFavicon from "../assets/images/new_favicon.png";

const optimizedFavicon = await getImage({ src: myFavicon, format: "png" });
