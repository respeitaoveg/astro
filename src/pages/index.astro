---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
import fortuneTigerImage from '../assets/images/fortune-tiger.png'
import '../assets/css/default.css'
import Button from '../components/Button.astro';
---

<Layout title="Bem-vindo ao Melhor Jogada." description='Aqui é pura diversão!'>
	<Header />
  <main class="w-full flex flex-col items-center">
    <div class="w-full flex flex-row justify-center items-center bg-black">
      <section class="container">
        <div class="flex flex-col md:flex-row items-center gap-10">
          <div class="flex-1">
            <div class="max-w-[300px]">
              <Image src={fortuneTigerImage} alt="" srcset="">
            </div>
          </div>
          <div class="flex-1">
            <h1>
              Download this <span class="text-primary">awesome</span> app
            </h1>
            <Button msg='teste' />
          </div>
        </div>
      </section>
    </div>
    <div class="w-full flex flex-row justify-center items-center bg-green-500 pt-10">
      <section class="container">
        <div>
          teste 123
        </div>
      </section>
    </div>
  </main>
  <footer class="w-full pt-10">
    footer
  </footer>
</Layout>

